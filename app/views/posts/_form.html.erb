<% if flash[:errors] %>
    <ul>
        <% flash[:errors].each do |error| %>
            <li><%= error %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %> <br><br>

    <%= f.label :content %>
    <%= f.text_area :content %> <br><br>

    <%= f.label :likes %>
    <%= f.number_field :likes %> <br><br>


    Blogger
    <%= f.collection_select :blogger_id, Blogger.all, :id, :name %><br><br>

    Destination
    <%= f.collection_select :destination_id, Destination.all, :id, :name %><br><br>

    <%= f.submit %>
<% end %>